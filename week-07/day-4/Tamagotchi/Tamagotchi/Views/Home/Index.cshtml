<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Frog Club</title>
</head>
<body>
    <h1>Frog Club</h1>
    <img src="@Model.image" style="width:400px;height:400px;" />
    <p>This is @Model.name living on @Model.food and @Model.drink.</p>
    <ol>


        @for (int i = 0; i < Model.tricks.Count; i++)
        {
            <li>
                @Model.tricks[i].description
                <form action="trick?i=@i" method="post">
                    <input type="submit" value="Do it!">
                </form>
            </li>
        }

    </ol>
    <form action="trickstore" method="get">
        <input type="submit" value="Trick Store">
    </form>
    <form action="nutritionstore" method="get">
        <input type="submit" value="Nutrition Store">
    </form>
</body>
</html>