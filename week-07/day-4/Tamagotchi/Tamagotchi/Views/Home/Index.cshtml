<html>
<head>
    <title>Information</title>
    <style>
        body {
            background-image: url("https://i.imgur.com/qlgoLVk.png");
            background-size: cover;
        }

        p, h1, form {
            text-align: center;
        }

        img {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: auto;
            height: 400px;
        }

        h1 {
            font-size: 40px;
            font-family: 'Comic Sans MS';
        }

        p {
            font-size: 20px;
            font-family: Arial, Helvetica, sans-serif;
        }
    </style>
</head>
<body>
    <h1>Frog Club</h1>
    <img src="@Model.image" />
    <p>This is @Model.name living on @Model.food and @Model.drink.</p>
    <form action="trick" method="post">
        <select name="i">
            @for (int i = 0; i < Model.tricks.Count; i++)
            {
                <option value="@i">@Model.tricks[i].description</option>

            }

        </select>
        <button type="submit">Do it!</button>
    </form>
    <form action="trickstore" method="get">
        <input type="submit" value="Trick Store">
    </form>
    <form action="nutritionstore" method="get">
        <input type="submit" value="Nutrition Store">
    </form>
</body>
</html>