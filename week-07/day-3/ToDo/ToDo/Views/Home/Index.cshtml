<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <style>
        table, th, td {
            border: 2px solid black;
            background-color: red
        }
    </style>
</head>
<body>
    <table style="width:100%">
        <tr>
            <th>ID</th>
            <th>Done</th>
            <th>Description</th>
        </tr>
        @for (int i = 0; i < Model.toDoList.Count; i++)
        {
            
            @if (Model.toDoList[i].isDone)
            {
                <tr>
                    <td><center>@(i+1)</center></td>
                    <td><center>X</center></td>
                    <td><center>@Model.toDoList[i].description</center></td>
                </tr>
            }
            else
            {
                <tr>
                    <td><center>@(i+1)</center></td>
                    <td> </td>
                    <td><center>@Model.toDoList[i].description</center></td>
                </tr>
            }
        }
    </table>

    <form action="Add" method="post">
        <input type="text" placeholder="Task" name="task" />
        <input type="submit" value="Több munka teso!">
    </form>
    <form action="Remove" method="post">
        <input type="number" placeholder="ID" name="index" />
        <input type="submit" value="Vedd le teso!">
    </form>
    <form action="Check" method="post">
        <input type="number" placeholder="ID" name="index" />
        <input type="submit" value="Kész van teso!">
    </form>
</body>
</html>